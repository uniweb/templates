name: {{projectName}}
description: Global Panda Conservation Research
defaultLanguage: en

# Foundation to use for this site
foundation: foundation

# Homepage - specifies which page folder becomes the root route (/)
index: home

# Internationalization configuration
# This template includes English (default), Spanish, and French
i18n:
  locales: [es, fr]
  localesDir: locales
  routeTranslations:
    es:
      /about: /acerca-de
      /research: /investigacion
      /contact: /contacto
      /blog: /noticias
    fr:
      /about: /a-propos
      /research: /recherche
      /contact: /contact
      /blog: /actualites

# Enable search functionality
search: true

# Content collections
# Markdown files in collections/ are processed into JSON at build time
collections:
  articles:
    path: collections/articles
    route: /blog
    sort: date desc

# Build options
build:
  prerender: true
